<%- include ("../partials/header") %>

<div class="">
    <div class="col s12">
        <a href="/<%= dynIn.tablename%>/add" style="margin-left: -15px;" class="btn btn-success btn-lg ">Add a new <%=dynIn.tablename%></a>
    </div>
</div>
<br>

<div class="=">
    <div class="col s12">
        <% if(dynIn.arr[0].length>0){%>
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:1%;text-align:center">Nummer</th>
                        <% for (var row of dynIn.arr[0]) { %>
                        <th style="width:5%;text-align:center"><%= row.name %></th>
                        <%}%>
                        <th solspan="2" style="width:20%;text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% dynIn.arr.forEach(function(item, index){ %>
                    <tr>
                        <td style="width:1%;text-align:center"><%= index +1 %></td>
                        <% for (var row of item) { %>
                        <td style="width:5%"><%= row.value %></td>
                        <%}%>
                        <td solspan="2" style="width:20%;text-align:center">
                            <a href="/labor/edit/<%= item.e_id %>" class="btn 
                            btn-success">Edit</a>
                            <a href="/labor/delete/<%= item.e_id %>" class="btn 
                                btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% }else{ %>
        <p><strong>There are no records available</strong></p>
    <% } %>
    </div>
</div>


<%- include ("../partials/footer") %>