<%- include ("../partials/header") %>

<div class="">
    <div class="col s12">
        <a href="/labor/add" style="margin-left: -15px;" class="btn btn-success btn-lg ">Add a new labor</a>
    </div>
</div>
<br>

<div class="=">
    <div class="col s12">
        <% if(items.length>0){%>
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:1%;text-align:center">Nummer</th>
                        <th style="width:5%">Labor ID</th>
                        <th style="width:5%">Laborname</th>
                        <th solspan="2" style="width:20%;text-align:center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach(function(item, index){ %>
                    <tr>
                        <td style="width:1%;text-align:center"><%= index +1 %></td>
                        <td style="width:5%"><%= item.labor_id %></td>
                        <td style="width:5%"><%= item.labor_name %></td>
                        <td solspan="2" style="width:20%;text-align:center">
                            <a href="/labor/edit/<%= item.e_id %>" class="btn 
                            btn-success">Edit</a>
                            <a href="/labor/delete/<%= item.e_id %>" class="btn 
                                btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        <% }else{ %>
        <p><strong>There are no records available</strong></p>
    <% } %>
    </div>
</div>


<%- include ("../partials/footer") %>